{
  "name": "opencode-cross-repo",
  "version": "0.4.1",
  "description": "OpenCode plugin for cross-repository operations with GitHub and GitLab support",
  "keywords": [
    "cross-repo",
    "github",
    "gitlab",
    "opencode",
    "plugin"
  ],
  "homepage": "https://github.com/elithrar/opencode-cross-repo#readme",
  "bugs": {
    "url": "https://github.com/elithrar/opencode-cross-repo/issues"
  },
  "license": "Apache-2.0",
  "author": "elithrar",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elithrar/opencode-cross-repo.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/plugin.mjs",
  "types": "./dist/plugin.d.ts",
  "exports": {
    ".": {
      "types": "./dist/plugin.d.ts",
      "import": "./dist/plugin.mjs"
    },
    "./advanced": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "bun run unbuild",
    "dev": "bun run unbuild --stub",
    "test": "bun run vitest",
    "typecheck": "bun run tsc --noEmit",
    "lint": "oxlint",
    "format": "oxfmt ."
  },
  "dependencies": {
    "shescape": "^2.1.7"
  },
  "devDependencies": {
    "@types/bun": "^1.2.17",
    "@types/node": "^22.19.3",
    "oxfmt": "^0.31.0",
    "oxlint": "^1.46.0",
    "typescript": "^5.9.3",
    "unbuild": "^3.5.0",
    "vitest": "^3.2.4"
  },
  "optionalDependencies": {
    "@opencode-ai/plugin": "^1.1.53"
  }
}
